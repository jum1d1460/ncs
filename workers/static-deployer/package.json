{
  "name": "ncs-static-deployer",
  "version": "1.0.0",
  "description": "Cloudflare Worker para desplegar estáticos y manejar webhooks de Sanity",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "deploy:production": "wrangler deploy --env production",
    "tail": "wrangler tail",
    "tail:staging": "wrangler tail --env staging",
    "tail:production": "wrangler tail --env production"
  },
  "keywords": [
    "cloudflare",
    "worker",
    "sanity",
    "webhook",
    "static-site",
    "deployment"
  ],
  "author": "NCS Psicóloga",
  "license": "MIT",
  "devDependencies": {
    "wrangler": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
