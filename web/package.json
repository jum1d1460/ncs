{
  "name": "astro",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "prebuild": "NODE_ENV=production node ./scripts/remove-dev-pages.cjs",
    "build": "NODE_ENV=production astro build",
    "preview": "astro preview",
    "astro": "astro",
    "verify:progress": "node ./scripts/sync-progress.cjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "security:audit": "node scripts/security/security-audit.js",
    "security:check": "npm run security:audit && npm audit --audit-level=moderate",
    "security:dependencies": "node scripts/security/dependency-checker.js",
    "security:config": "node scripts/security/config-validator.js",
    "security:secrets": "node scripts/security/secret-detector.js",
    "lint": "eslint scripts/ --ext .js,.cjs",
    "prepare": "husky"
  },
  "dependencies": {
    "@portabletext/react": "^4.0.3",
    "@sanity/client": "7.11.0",
    "@sanity/image-url": "^1.2.0",
    "@shoelace-style/shoelace": "^2.20.1",
    "astro": "^5.13.5",
    "lenis": "^1.3.11",
    "lucide-astro": "^0.543.0",
    "motion": "^12.23.12"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.8.0",
    "@types/node": "^24.3.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.35.0",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.7",
    "tailwindcss": "^3.4.17",
    "vitest": "^3.2.4"
  }
}
