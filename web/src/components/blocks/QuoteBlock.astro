---
interface Props {
  quote: string;
  meta?: string;
  align?: 'left'|'center';
}

const { quote, meta = '', align = 'left' } = Astro.props as Props;
---

<section class="my-12">
  <blockquote class={`max-w-3xl mx-auto border-l-4 pl-6 italic text-xl ${align === 'center' ? 'text-center' : 'text-left'}`}>
    {quote}
    {meta && <footer class="mt-3 not-italic text-sm text-gray-600">{meta}</footer>}
  </blockquote>
  </section>


