---
interface Props {
  quote: string;
  meta?: string;
  align?: 'left'|'center';
}

const { quote, meta = '', align = 'left' } = Astro.props as Props;
---

<section class="my-12">
  <div class="mx-auto max-w-6xl px-4">
    <div class="grid grid-cols-1 gap-8">
      <blockquote class={`max-w-3xl mx-auto border-l-4 pl-6 italic text-responsive-h4 ${align === 'center' ? 'text-center' : 'text-left'}`}>
        {quote}
        {meta && <footer class="mt-3 not-italic text-responsive-small text-gray-600">{meta}</footer>}
      </blockquote>
    </div>
  </div>
</section>


