---
const { items } = Astro.props as { items: Array<{ image: any; quote: string; fullName: string }>} ;
---

<section class="w-full py-8 sm:py-12">
  <div class="mx-auto max-w-7xl px-4">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {items?.map((t) => (
        <figure class="rounded-lg bg-white/70 shadow-sm p-6 flex flex-col gap-4">
          {t.image && (
            <img src={t.image?.asset?.url} alt={t.image?.alt || ''} class="h-16 w-16 rounded-full object-cover" loading="lazy" decoding="async" />
          )}
          <blockquote class="text-gray-700 italic">“{t.quote}”</blockquote>
          <figcaption class="text-sm font-medium text-gray-900">{t.fullName}</figcaption>
        </figure>
      ))}
    </div>
  </div>
  
</section>


