---
import Service from "./Service.astro";

interface ServiceData {
  _id?: string;
  title?: string;
  durationMinutes?: number;
  priceType?: 'fixed' | 'consult';
  price?: number;
  shortDescription?: string;
  longDescription?: any[];
  cardImage?: any;
  blockImage?: any;
}

interface Props {
  items?: ServiceData[];
  autoplay?: boolean;
  intervalMs?: number;
  showPrice?: boolean;
}

const {
  items = [],
  autoplay = false,
  intervalMs = 5000,
  showPrice = true
} = Astro.props as Props;
---

<section class="w-full">
  <div class="flex items-center justify-between mb-3">
    <div class="text-sm text-gray-600">{items.length} servicios</div>
  </div>
  <div id="services-scroller" class="grid grid-flow-col auto-cols-[85%] sm:auto-cols-[60%] md:auto-cols-[40%] lg:auto-cols-[33%] gap-4 overflow-x-auto snap-x snap-mandatory pb-2">
    {items.map((service) => (
      <div class="snap-start">
        <Service service={service} variant="card" showPrice={showPrice} />
      </div>
    ))}
  </div>
  <noscript>
    <div class="text-xs text-gray-500 mt-2">Desliza horizontalmente para ver m√°s servicios.</div>
  </noscript>
  
</section>


