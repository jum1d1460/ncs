---
interface Category {
    title: string;
    description: string;
}

interface BlogMetaProps {
    categories?: Category[];
    publishedAt?: string;
    author?: {
        name: string;
        image?: any;
    };
}

const { categories, publishedAt, author } = Astro.props;

// Importar función de formato de fechas
import { formatDateSpanish } from '../../lib/dateUtils';

// Usar la función utilitaria para formatear fechas
const formatDate = formatDateSpanish;
---

<div class="blog-meta bg-white border-b border-gray-200 py-6">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
            <!-- Categorías/Tags -->
            {categories && categories.length > 0 && (
                <div class="flex flex-wrap gap-2">
                    <span class="text-sm font-medium text-gray-700 mr-2">Categorías:</span>
                    {categories.map((category: Category) => (
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800 hover:bg-blue-200 transition-colors">
                            {category.title}
                        </span>
                    ))}
                </div>
            )}
            
            <!-- Fecha de publicación -->
            {publishedAt && (
                <div class="flex items-center text-sm text-gray-600">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                    <time datetime={publishedAt}>
                        Publicado el {formatDate(publishedAt)}
                    </time>
                </div>
            )}
        </div>
    </div>
</div>

<style>
    .blog-meta {
        position: relative;
    }
    
    .blog-meta::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 1px;
        background: linear-gradient(90deg, transparent, #e5e7eb, transparent);
    }
</style>
