---
interface ColumnObject {
  _key?: string;
  _type?: string;
  content?: any[];
}

interface Props {
  columnsCount: 2 | 3;
  columns: ColumnObject[];
}

const { columnsCount = 2, columns = [] } = Astro.props as Props;
---

<section class="w-full my-12">
  <div class={`grid grid-cols-1 gap-6 md:grid-cols-${columnsCount}`}>
    {columns?.map((col: ColumnObject, idx: number) => (
      <div class="prose max-w-none" data-col={idx}>
        {Array.isArray(col?.content)
          ? col.content.map((b: any) => (
              <p>{Array.isArray(b?.children) ? b.children.map((c: any) => c?.text).join('') : ''}</p>
            ))
          : null}
      </div>
    ))}
  </div>
</section>


