---
const { title, logos } = Astro.props as { title?: string; logos: Array<{ asset?: { url?: string }, alt?: string }> };
---

<section class="w-full py-8 sm:py-12">
  <div class="mx-auto max-w-7xl px-4">
    {title && (
      <h2 class="text-xl sm:text-2xl font-semibold mb-6">{title}</h2>
    )}
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-6 items-center">
      {logos?.map((logo) => (
        <div class="h-16 flex items-center justify-center">
          <img src={logo?.asset?.url} alt={logo?.alt || ''} class="max-h-12 object-contain opacity-80 hover:opacity-100 transition" loading="lazy" decoding="async" />
        </div>
      ))}
    </div>
  </div>
</section>


