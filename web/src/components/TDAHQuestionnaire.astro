  // Todas las preguntas en un array plano
  const allQuestions: Question[] = [
    // Atenci√≥n y Concentraci√≥n
    { id: 'q1', text: '¬øCon qu√© frecuencia tienes dificultad para concentrarte en los detalles o cometes errores por descuido en tu trabajo?', category: 'atencion' },
