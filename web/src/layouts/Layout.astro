---
interface Props {
  title?: string;
  description?: string;
  siteTitle?: string;
  siteDescription?: string;
  faviconUrl?: string | null;
  ogImageUrl?: string | null;
  // Header/Footer inputs
  brand?: { logo?: { asset?: { url?: string }, alt?: string } } | null;
  navMain?: { label?: string; url?: string; target?: string; page?: { slug?: { current?: string } } }[];
  contact?: { phone?: string; whatsapp?: string; email?: string };
  bookingUrl?: string;
  seoFooterText?: string;
  legalLinks?: { label?: string; url?: string }[];
  socialLinks?: { type?: string; url?: string }[];
}

const {
  title = "NCS Psicóloga Zaragoza",
  description = "Psicóloga en Zaragoza - Nelly Castro Sanchez",
  siteTitle,
  siteDescription,
  faviconUrl,
  ogImageUrl,
  brand,
  navMain,
  contact,
  bookingUrl,
  seoFooterText,
  legalLinks,
  socialLinks
} = Astro.props;
import {buildHeadMeta} from "../lib/head";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
import motionClientUrl from "../lib/motionClient.ts?url";
const head = buildHeadMeta({title, description, siteTitle, siteDescription, faviconUrl, ogImageUrl});
---
<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type={head.faviconType} href={head.faviconHref} />
		<meta name="generator" content={Astro.generator} />
		<title>{head.computedTitle}</title>
		<meta name="description" content={head.computedDescription} />
		{head.ogImageUrl && <meta property="og:image" content={head.ogImageUrl} />}
		<meta name="keywords" content="Psicóloga Zaragoza, Psicología, Nelly Castro" />
		<meta name="author" content="Nelly Castro Sanchez" />
		<meta name="robots" content="index, follow" />
		
		<!-- Google Fonts - Poppins -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
		
		<!-- Shoelace CSS -->
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@shoelace-style/shoelace@2.20.1/cdn/themes/light.css" />
		
		<!-- TailwindCSS inyectado via import en el frontmatter -->
		
	</head>
	<body class="font-poppins">
		<script type="module" src={motionClientUrl}></script>
		<Header 
			logoUrl={brand?.logo?.asset?.url}
			logoAlt={brand?.logo?.alt}
			navMain={navMain}
			phone={contact?.phone}
			whatsapp={contact?.whatsapp}
			bookingUrl={bookingUrl}
		/>
		<main>
			<slot />
		</main>
		<Footer 
			logoUrl={brand?.logo?.asset?.url}
			logoAlt={brand?.logo?.alt}
			seoFooterText={seoFooterText}
			navMain={navMain}
			legalLinks={legalLinks}
			socialLinks={socialLinks}
			contact={contact}
		/>
		
		<!-- Shoelace JS -->
		<script type="module" src="https://cdn.jsdelivr.net/npm/@shoelace-style/shoelace@2.20.1/cdn/shoelace-autoloader.js"></script>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
