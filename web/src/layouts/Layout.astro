---
interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "NCS Psicóloga Zaragoza",
  description = "Psicóloga en Zaragoza - Nelly Castro Sanchez"
} = Astro.props;
---
<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta name="keywords" content="Psicóloga Zaragoza, Psicología, Nelly Castro" />
		<meta name="author" content="Nelly Castro Sanchez" />
		<meta name="robots" content="index, follow" />
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
