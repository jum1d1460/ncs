---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/blocks/Hero.astro';

// Datos de prueba simples para el Hero
const heroData = {
  mainTitle: "TEST HERO",
  subtitle: "Prueba de imagen de fondo",
  description: "Esta es una página de prueba para verificar que la imagen de fondo ocupe correctamente toda la altura del viewport.",
  primaryButton: {
    text: "Botón Principal",
    url: "#",
    variant: "primary"
  },
  secondaryButton: {
    text: "Botón Secundario",
    url: "#",
    variant: "outline"
  },
  backgroundImage: {
    asset: {
      _ref: "image-1234567890abcdef",
      _type: "reference"
    },
    _type: "image"
  },
  silhouettePosition: "right",
  overlaySettings: {
    overlayType: "radial",
    overlayColor: "#1e3a8a",
    overlayOpacity: 0.6,
    secondaryColor: "#000000",
    secondaryOpacity: 0.4,
    radialPosition: "center",
    shadowIntensity: "medium"
  }
};
---

<Layout title="Test Hero - Imagen de Fondo">
  <Hero {...heroData} />
  
  <!-- Contenido adicional para probar el scroll -->
  <section class="py-20 bg-gray-100 min-h-screen">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-8">Contenido de Prueba</h2>
      <p class="text-lg text-center text-gray-600 mb-8">
        Esta es una página de demostración para probar que el Hero funcione correctamente.
        La imagen de fondo debe ocupar toda la altura del viewport.
      </p>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h3 class="text-xl font-semibold mb-3">Característica 1</h3>
          <p class="text-gray-600">Descripción de la primera característica del hero.</p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h3 class="text-xl font-semibold mb-3">Característica 2</h3>
          <p class="text-gray-600">Descripción de la segunda característica del hero.</p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h3 class="text-xl font-semibold mb-3">Característica 3</h3>
          <p class="text-gray-600">Descripción de la tercera característica del hero.</p>
        </div>
      </div>
    </div>
  </section>
</Layout>
