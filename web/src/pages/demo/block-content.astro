---
export const prerender = import.meta.env.DEV;
import Layout from "../../layouts/Layout.astro";
import PageRenderer from "../../components/PageRenderer.astro";

const demoBlocks = [
  {
    _type: 'imageWithLayout',
    image: { asset: { _ref: 'image-demo-1-jpg' } },
    alt: 'Consulta psicológica',
    layout: 'left',
    width: 'half',
    caption: 'Imagen a la izquierda con texto de ejemplo',
    marginY: 'md',
    // contenido de texto simulado mediante slot en componente no aplica aquí
  },
  {
    _type: 'columns',
    columnsCount: 2,
    columns: [
      [ { children: [{text: 'Columna 1: texto de ejemplo.'}] } ],
      [ { children: [{text: 'Columna 2: más contenido de ejemplo.'}] } ]
    ]
  },
  {
    _type: 'blockImage',
    image: { asset: { _ref: 'image-demo-2-jpg' } },
    alt: 'Imagen de corte a sangre',
    variant: 'fullBleed',
    aspectRatio: '16:9',
    marginTop: 'md',
    marginBottom: 'md',
    overlayOpacity: 15,
  },
  {
    _type: 'quoteBlock',
    quote: 'La salud mental no es un destino, sino un proceso.',
    meta: 'Autor desconocido — 2024',
    align: 'center'
  }
];
---

<Layout title="Demo: blockContent avanzados">
  <section class="max-w-screen-lg mx-auto px-6 py-10">
    <h1 class="text-3xl font-semibold mb-6">Demo de bloques avanzados</h1>
    <p class="text-gray-700 mb-10">Esta página muestra los nuevos bloques: imagen con layout, columnas, imagen de corte y quote.</p>
  </section>

  <PageRenderer blocks={demoBlocks} />
</Layout>


